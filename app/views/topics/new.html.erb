<h1>記事投稿</h1>

<div class="container">
  <%= form_for(@topic) do |f| %>
    <div class="text-center">
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
    </div>
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  <% end %>
</div>